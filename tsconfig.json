{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "typeRoots": [
                "./node_modules/@types"
            ],
            "sap/*": [
                "./node_modules/@sapui5/ts-types-esm"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}